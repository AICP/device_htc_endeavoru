on early-init
    chown system /sys/kernel/tegra_cap/core_cap_level
    chown system /sys/kernel/tegra_cap/core_cap_state
    chown system /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor

# Settings Tegra3Parts
    chown system system /sys/devices/platform/htc_battery/fast_charge
    chmod 0666 /sys/devices/platform/htc_battery/fast_charge
    chown system system /sys/android_touch/calibration_control
    chmod 0666 /sys/android_touch/calibration_control
    chown system system /sys/android_touch/s2w_allow_double_tap
    chmod 0666 /sys/android_touch/s2w_allow_double_tap
    chown system system /sys/android_touch/s2w_allow_stroke
    chmod 0666 /sys/android_touch/s2w_allow_stroke
    chown system system /sys/android_touch/s2w_double_tap_barrier_y
    chmod 0666 /sys/android_touch/s2w_double_tap_barrier_y
    chown system system /sys/android_touch/s2w_double_tap_duration
    chmod 0666 /sys/android_touch/s2w_double_tap_duration
    chown system system /sys/android_touch/s2w_double_tap_threshold
    chmod 0666 /sys/android_touch/s2w_double_tap_threshold
    chown system system /sys/android_touch/s2w_min_distance
    chmod 0666 /sys/android_touch/s2w_min_distance
    chown system system /sys/android_touch/s2w_register_threshold
    chmod 0666 /sys/android_touch/s2w_register_threshold
    chown system system /sys/android_touch/sweep2wake
    chmod 0666 /sys/android_touch/sweep2wake
    chown system system /sys/class/leds/button-backlight/slow_blink
    chmod 0666 /sys/class/leds/button-backlight/slow_blink

# Interactive governor settings
    chown system system /sys/devices/system/cpu/cpufreq/interactive/boost_factor
    chmod 0664 /sys/devices/system/cpu/cpufreq/interactive/boost_factor
    chown system system /sys/devices/system/cpu/cpufreq/interactive/go_maxspeed_load
    chmod 0664 /sys/devices/system/cpu/cpufreq/interactive/go_maxspeed_load
    chown system system /sys/devices/system/cpu/cpufreq/interactive/io_is_busy
    chmod 0664 /sys/devices/system/cpu/cpufreq/interactive/io_is_busy
    chown system system /sys/devices/system/cpu/cpufreq/interactive/max_boost
    chmod 0664 /sys/devices/system/cpu/cpufreq/interactive/max_boost
    chown system system /sys/devices/system/cpu/cpufreq/interactive/sustain_load
    chmod 0664 /sys/devices/system/cpu/cpufreq/interactive/sustain_load

# liblights
    chown system system /sys/class/leds/button-backlight/currents
    chmod 0664 /sys/class/leds/button-backlight/currents
    chown system system /sys/class/leds/button-backlight/button_brightness
    chmod 0664 /sys/class/leds/button-backlight/button_brightness

# a2dp freq boost
    chmod 0664 /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq
    chmod 0664 /sys/devices/platform/tegra_uart.2/a2dp_tuning

# permission for torch app
    chmod 0666 /sys/class/leds/flashlight/brightness

# Mediaserver: camera calibration
    chown system system /dev/block/mmcblk0p2
    chmod 0664 /dev/block/mmcblk0p2

on boot
    # bluetooth
    insmod /system/lib/modules/hci_if_drv.ko
    insmod /system/lib/modules/uhid.ko
    # Stock libbt-vendor wants /dev/hci_tty
    exec /system/bin/mknod /dev/hci_tty c 239 0
    chown bluetooth bluetooth /dev/hci_tty
    chmod 0660 /dev/hci_tty

# Replaces HTC's upd_nvs_wlan0 solution with our own
service wifi_calib /system/bin/wifi_calibration.sh
    disabled
    class wifi
    user root
    group root
    oneshot
